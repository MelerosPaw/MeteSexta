<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/view_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_animal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Animal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_animal"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tv_animal_specie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Animal"
            app:layout_constraintStart_toStartOf="@+id/tv_animal_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_animal_type"
            app:layout_constraintEnd_toStartOf="@+id/iv_animal"
            android:textSize="11sp"/>

    <ImageView
            android:id="@+id/iv_animal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background"/>

</android.support.constraint.ConstraintLayout>

